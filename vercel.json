{
  "version": 2,
  "crons": [
    {
      "path": "/api/cron?job=daily-maintenance-check",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron?job=weekly-notifications",
      "schedule": "0 0 * * 0"
    },
    {
      "path": "/api/cron?job=monthly-reports",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron?job=backup",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron?job=maintenance-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron?job=document-cleanup",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron?job=meeting-reminders",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron?job=payment-reminders",
      "schedule": "0 10 * * 1"
    }
  ],
  "buildCommand": "next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["syd1"],
  "headers": [
    {
      "source": "/api/cron(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, private, no-cache"
        }
      ]
    }
  ]
}